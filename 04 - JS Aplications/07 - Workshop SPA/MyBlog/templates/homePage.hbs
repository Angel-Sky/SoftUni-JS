{{> header}}

{{#if isLoggedIn}}
<section id="home-logged">
    <section class="first-section">
        <section class="background-container">
            <form action="/create-post" method="POST">
                <h1>Create Post</h1>
                <label for="title">Title</label>
                <input type="text" name="title" required>
                <label for="category">Category</label>
                <input type="text" name="category" required>
                <label for="content">Content</label>
                <textarea name="content" cols="30" rows="7" required></textarea>
                <button>Submit</button>
            </form>
        </section>
    </section>
    <section class="second-section">
        <h3>Articles</h3>
        <hr>
        <div class="posts-row">
            {{#each posts}}
            <article class="post">
                <h1>{{this.title}}</h1>
                <h2><span>{{this.category}}</span></h2>
                <p>{{this.content}}</p>
                <a href="/delete/{{postId}}" id="delete-button">Delete</a>
                <a href="/details/{{postId}}" id="details-button">Details</a>
                <a href="/edit/{{postId}}" id="edit-button">Edit</a>
            </article>
            {{!-- {{> postPartial}} --}}
            {{else}}
            {{/each}}
        </div>
    </section>
</section>

{{else}}

<section id="home">
    <section class="background-container">
        <h1>Welcome to MyBlog!</h1>
        <div class="auth-buttons">
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        </div>
    </section>
</section>
{{/if}}