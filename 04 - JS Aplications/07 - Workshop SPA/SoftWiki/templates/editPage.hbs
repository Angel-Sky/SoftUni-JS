{{> header}}

<div class="container">
    <form action="/edit/{{article.id}}" method="POST">
        <fieldset>
            <legend>Edit article</legend>
            <p class="field title">
                <input type="text" name="title" id="title" placeholder="Arrays" value="{{article.title}}" required>
                <label for="title">Title:</label>
            </p>

            <p class="field category">
                <input type="text" name="category" id="category" placeholder="JavaScript" value="{{article.category}}" required>
                <label for="category">Category:</label>
            </p>
            <p class="field content">
                <textarea name="content" id="content" required>{{article.content}}</textarea>
                <label for="content">Content:</label>
            </p>

            <p class="field submit">
                <button class="btn submit" type="submit">Edit</button>
            </p>

        </fieldset>
    </form>
</div>