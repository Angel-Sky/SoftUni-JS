{{> header}}
<div class="container details">
    <div class="details-content">
        <h2>{{article.title}}</h2>
        <strong>{{article.category}}</strong>
        <p>{{article.content}}</p>
        <div class="buttons">
            <a href="#delete/{{article.articleId}}" class="btn delete">Delete</a>
            <a href="#edit/{{article.articleId}}" class="btn edit">Edit</a>
            <a href="/" class="btn edit">Back</a>
        </div>
    </div>
</div>