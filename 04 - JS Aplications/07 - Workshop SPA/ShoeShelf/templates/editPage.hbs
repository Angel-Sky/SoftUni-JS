{{> header}}
<main>
    <h1>Edit Offer</h1>
    <p class="message"></p>
    <form action="details/edit/{{offer.offerId}}", method="POST">
        <div>
            <input type="text" placeholder="Name..." name="productName" value="{{offer.productName}}" required>
        </div>
        <div>
            <input type="text" placeholder="Price..." name="price" value="{{offer.price}}" required>
        </div>
        <div>
            <input type="text" placeholder="Image url..." name="imageUrl" value="{{offer.imageUrl}}" required>
        </div>
        <div>
            <textarea placeholder="Give us some description about this offer..." name="description"
                required> {{offer.description}} </textarea>
        </div>
        <div>
            <input type="text" placeholder="Brand..." name="brand" value="{{offer.brand}}" required>
        </div>
        <div>
            <button>Edit</button>
        </div>
    </form>
</main>
{{> footer}}