{{> header}}
<main>
    <h1>Create New Offer</h1>
    <p class="message"></p>
    <form method="POST" action="/create">
        <div>
            <input type="text" placeholder="Name..." name="productName" required>
        </div>
        <div>
            <input type="text" placeholder="Price..." name="price" required>
        </div>
        <div>
            <input type="text" placeholder="Image url..." name="imageUrl" required>
        </div>
        <div>
            <textarea placeholder="Give us some description about this offer..." name="description" required></textarea>
        </div>
        <div>
            <input type="text" placeholder="Brand..." name="brand" required>
        </div>
        <div>
            <button>Create</button>
        </div>
    </form>
</main>
{{> footer}}