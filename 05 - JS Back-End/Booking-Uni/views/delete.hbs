<section id="viewAddhotel">
    <h2>Delete existing hotel</h2>
    <form id="formAddhotel" method="POST" action="/hotel/{{hotel._id}}/delete">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="hotel" value="{{hotel.hotel}}" disabled>
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{hotel.city}}" disabled>
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="free-rooms" value="{{hotel.free-rooms}}" disabled>
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl" value="{{hotel.imgUrl}}" disabled>
        <input type="submit" class="create" value="Delete">
    </form>
</section>